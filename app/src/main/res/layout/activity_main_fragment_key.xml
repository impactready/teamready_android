<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/input_key_save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:hint="Please enter." />

    <Button
        android:id="@+id/button_key_save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/input_key_save"
        android:text="@string/button_key_save" />

    <Button
        android:id="@+id/button_account_setup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_key_save"
        android:text="@string/button_account_setup" />

    <TextView
        android:id="@+id/groups_label"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/button_account_setup"
        android:layout_marginTop="5dp"
        android:background="#ffcfcdcb"
        android:maxLines="10"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:text="@string/groups_label"
        android:textColor="#ff000000"
        android:textSize="15dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/groups_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groups_label"
        android:minHeight="70dp"
        android:paddingLeft="3dp"></TextView>

    <TextView
        android:id="@+id/types_label"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/groups_list"
        android:layout_marginTop="5dp"
        android:background="#ffcfcdcb"
        android:maxLines="10"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:text="@string/types_label"
        android:textColor="#ff000000"
        android:textSize="15dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/types_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/types_label"
        android:minHeight="70dp"
        android:paddingLeft="3dp"></TextView>
    </RelativeLayout>
</ScrollView>