<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="63dp"
    android:paddingLeft="2dp"
    android:paddingTop="2dp">

    <ImageView
        android:id="@+id/item_image_thumbnail"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="item_image" />

    <ImageView
        android:id="@+id/item_image_delete"
        android:layout_width="46dp"
        android:layout_height="36dp"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="6dip"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:contentDescription="item_image" />

    <TextView
        android:id="@+id/item_first_line"
        android:layout_width="fill_parent"
        android:layout_height="22dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/item_image_thumbnail"
        android:layout_toLeftOf="@id/item_image_delete"
        android:gravity="center_vertical"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_second_line"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@id/item_first_line"
        android:layout_toRightOf="@id/item_image_thumbnail"
        android:layout_toLeftOf="@id/item_image_delete"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/item_upload_line"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/item_image_thumbnail"
        android:layout_toLeftOf="@id/item_image_delete"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="12sp"
        android:textStyle="bold|italic"/>

</RelativeLayout>