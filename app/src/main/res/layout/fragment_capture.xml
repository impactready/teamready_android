<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaptureActivityFragment"
    android:paddingTop="2dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:text="@string/button_event_new"
        android:id="@+id/button_event_new"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-6dp"
        android:textSize="18sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:text="@string/button_task_new"
        android:id="@+id/button_task_new"
        android:layout_below="@+id/button_event_new"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-6dp"
        android:textSize="18sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:text="@string/button_story_new"
        android:id="@+id/button_story_new"
        android:layout_below="@+id/button_task_new"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-6dp"
        android:textSize="18sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:text="@string/button_measurement_new"
        android:id="@+id/button_measurement_new"
        android:layout_below="@+id/button_story_new"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-6dp"
        android:textSize="18sp" />
</RelativeLayout>
